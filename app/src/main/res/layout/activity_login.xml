<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:background="@drawable/space1"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/iconwithname"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                />
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="UserId/EmailId"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="serif-monospace"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="50dp"

                />
            <EditText
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:inputType="textEmailAddress"
                android:textColor="#faf8f8"
                android:background="#b4373152"
                android:layout_gravity="center"
                android:id="@+id/txtuid"
                android:autoSizeMaxTextSize="20sp"
                android:textSize="25sp"
                android:fontFamily="serif-monospace"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                />-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:paddingTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="50dp"
                android:hint    ="UserId/EmailId"
                android:textColorHint="#f7f5f2"
                >

                <EditText
                    android:id="@+id/txtuid"
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/text" />
            </android.support.design.widget.TextInputLayout>
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"

                android:text="Password"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="15sp"
                android:fontFamily="serif-monospace"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"

                />
            <EditText
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:textColor="#faf8f8"
                android:background="#b4373152"
                android:id="@+id/txtpass"

                android:textSize="25sp"
                android:fontFamily="serif-monospace"
                />
-->
            <android.support.design.widget.TextInputLayout
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginLeft="34dp"

                android:layout_marginTop="20dp"
                android:hint="Password"
                android:textColorHint="#f7f5f2"
                android:paddingTop="1dp"
                app:passwordToggleDrawable="@drawable/vis"
                app:passwordToggleEnabled="true"


                >

                <EditText
                    android:id="@+id/txtpass"
                    android:layout_width="260dp"
                    android:layout_height="40dp"
                    android:inputType="textPassword"
                    android:textColor="@color/text" />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/forgot"
                android:onClick="vforgot"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:clickable="true"
                android:focusable="false"
                android:textColor="@color/text"/>
            <Button
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:id="@+id/login"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_button_login"
                android:layout_gravity="center"
                android:fontFamily="serif-monospace"
                android:text="Login"
                android:textColor="#050000"
                android:textSize="30sp"
                android:textStyle="bold"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/text"

                android:layout_marginTop="10dp"
                android:text="Don't Have an Account?"
                android:textSize="15sp"/>
            <Button
                android:layout_width="267dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center" android:id="@+id/register"
                android:background="@drawable/round_button"


                android:text="Register Now"
                android:textColor="#dfdada"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"


                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>