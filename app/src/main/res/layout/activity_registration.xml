<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Registration"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/space1">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="#b4373152"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="AstroWorld"
                    android:textColor="@color/text"
                    android:textSize="40dp"

                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#ff0307"
                    android:hint="UerId"
                    android:textColorHint="#f7f5f2"
                    app:hintTextAppearance="@style/mystyle"

                    >

                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:id="@+id/userid"
                        android:textColor="@color/text" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#ff0307"
                    android:hint="Name"
                    android:textColorHint="#f7f5f2"
                    app:hintTextAppearance="@style/mystyle"

                    >

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:inputType="textPersonName"
                        android:textColor="@color/text" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:hint="Address"
                    android:textColorHint="#f7f5f2"
                    app:hintTextAppearance="@style/mystyle"

                    >

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:inputType="textPersonName"
                        android:textColor="@color/text" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:hint="Email"
                    android:textColorHint="#f7f5f2"
                    app:hintTextAppearance="@style/mystyle"


                    >

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/text" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:hint="Password"
                    android:textColorHint="#f7f5f2"
                    app:hintTextAppearance="@style/mystyle"
                    app:passwordToggleDrawable="@drawable/vis"
                    app:passwordToggleEnabled="true"


                    >

                    <EditText
                        android:id="@+id/pass"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:inputType="textPassword"
                        android:textColor="@color/text" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:hint="Re-enter Password"
                    android:textColorHint="#f7f5f2"
                    app:hintTextAppearance="@style/mystyle"
                    app:passwordToggleDrawable="@drawable/vis"
                    app:passwordToggleEnabled="true"


                    >

                    <EditText
                        android:id="@+id/reenterpass"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:inputType="textPassword"
                        android:textColor="@color/text" />
                </android.support.design.widget.TextInputLayout>

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Gender"
                            android:textColor="#f7f5f2"
                            android:textSize="18dp" />

                        <RadioGroup
                            android:id="@+id/radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text="Male"

                                android:id="@+id/male"
                                android:textColor="#f7f5f2"
                                android:textSize="18dp" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15.9dp"
                                android:text="Female"
                                android:id="@+id/female"
                                android:textColor="#f7f5f2"
                                android:textSize="18dp" />
                        </RadioGroup>

                    </TableRow>

                </TableLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:hint="PhoneNo"
                    android:textColorHint="#f7f5f2"
                    app:hintTextAppearance="@style/mystyle"


                    >

                    <EditText
                        android:id="@+id/phoneno"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:inputType="number"
                        android:textColor="@color/text" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:hint="Experience"
                    android:textColorHint="#f7f5f2"
                    app:hintTextAppearance="@style/mystyle"


                    >

                    <EditText
                        android:id="@+id/exp"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:inputType="textPersonName"
                        android:lines="4"
                        android:textColor="@color/text" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:hint="Skill"
                    android:textColorHint="#f7f5f2"
                    app:hintTextAppearance="@style/mystyle"


                    >

                    <EditText
                        android:id="@+id/skill"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:inputType="textPersonName"
                        android:lines="4"
                        android:textColor="@color/text" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:hint="RegistrationNo"
                    android:textColorHint="#f7f5f2"
                    app:hintTextAppearance="@style/mystyle"


                    >

                    <EditText
                        android:id="@+id/regNo"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:inputType="textPersonName"
                        android:lines="4"
                        android:textColor="@color/text" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btn"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:background="#6f5d5d63"
                    android:text="Register"
                    android:textColor="#dfdada"
                    android:textSize="25dp"

                    />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
